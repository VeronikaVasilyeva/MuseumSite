@model MuseumProject.Context.LocalPasswordModel

<p>
    У вас нет локального пароля для этого сайта. Добавьте локальный пароль,
    чтобы входить без внешней учетной записи.
</p>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
   
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-5">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-5">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-10">
            <button type="submit" class="btn btn-success">Задать пароль</button>
        </div>
    </div>
}
